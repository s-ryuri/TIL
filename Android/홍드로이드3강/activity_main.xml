<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/strBtn1"
        android:textColor="@android:color/black"
        android:id="@+id/nate_button"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/strBtn2"
        android:textColor="@android:color/black"
        android:id="@+id/emer_button"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/strBtn3"
        android:textColor="@android:color/black"
        android:id="@+id/galley_button"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/finish_button"
        android:textColor="@android:color/black"
        android:text="@string/strBtn4"/>


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_text"
        android:hint="hello"/>

    <Button
        android:id="@+id/move_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/move_btn"
        android:textColor="@android:color/black" />


</LinearLayout>
